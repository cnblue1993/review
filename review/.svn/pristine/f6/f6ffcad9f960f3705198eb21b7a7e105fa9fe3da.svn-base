<html>
	<head>
		<link rel="stylesheet" href="_PUBLIC_/Css/review.css" />

		<meta http-equiv="Content-Type" content="text/html;charset=utf-8">
	</head>
    <body>
    <div id="main">	
			<table id="table2" border=1>
				<tr>
					<th width=30% align="center">评选活动名称</th>
					<th width=20% align="center">开始时间</th>
					<th width=20% align="center">结束时间</th>
					<th width=10% align="center">当前状态</th>
					<th width=20% align="center">编辑</th>
				</tr>

				<foreach name='data' item='v'>
				<tr>
					<td>{$v.r_name}</td>
					<td>{$v.r_start}</td>
					<td>{$v.r_end}</td>
					<td>{$v.r_state}</td>
					<td>
						[<a href="{:U(GROUP_NAME.'/Statistics/surveyshow',array('rid'=>$v['r_id']))}">评审结果查看</a>]
					</td>
				</tr>
				</foreach>
			</table>
	</div>
	</body>
</html>