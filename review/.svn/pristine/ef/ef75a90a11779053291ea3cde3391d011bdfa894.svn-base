.main{width:980px;height:auto;overflow:hidden;margin:20px auto;}
.main .main-left{width:680px;height:auto;overflow:hidden;float:center;background:#fff;border:1px solid #D4D4D4;border-radius:6px 6px 0 0;}
.main .main-left .location{width:620px;height:39px;line-height:39px;border-bottom:1px solid #D4D4D4;background:#f9f9f9;padding-left:10px;}
.main .main-left .location a{margin:0 5px;color:#3361AD;}
.main .main-left .location a:hover{color:#FF7D4E;}
.main .main-left .title{width:600px;height:60px;border-bottom:1px solid #D4D4D4;padding:0 15px;}
.main .main-left .title p{width:600px;height:34px;line-height:34px;font-size:14px;font-weight:bold;color:#3361AD;}
.main .main-left .title div{width:600px;height:26px;line-height:26px;text-align:right;color:#666666;}
