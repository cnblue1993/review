#top{
	width:100%;
	height: 10%;
	font-size: 20px;
	background:#008FD7;
	color: #fff;
}
#main{
	margin-top: 20px;
	width:100%;
	color:#000000;
	font-size: 30px;
	border:solid #00A2E9;
	text-align: center;
	vertical-align: middle;
}

#title{
	background-color:#b0e0e6;
}
#big{
	font-size: 30px;
	color:#0ff;
	text-align: center;

}

#advice{
	margin-top: 20px;
	width:100%;
	color:#000000;
	font-size: 20px;
	border:solid 1px #00A2E9;
}
.text{
	font-size: 18px;
	text-indent: 18px; 
	text-align: left;
	vertical-align: top;
	width: 100%;
	height: 100px;
	overflow-x:visible;
	overflow-y:visible;
}

#foreign{
	font-size: 25px;
	text-align: center;
	border:solid 1px #00A2E9;
}

#white{
	background-color: #fff;
}
a:link,a:visited{
    color:#fff;
    text-align: center;
    text-decoration:none;
}
a:active,a:hover{
	color:#0ff; 
	text-align: center;
    text-decoration:none;
}