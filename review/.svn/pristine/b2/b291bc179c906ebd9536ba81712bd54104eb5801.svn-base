<script language="JavaScript" type="text/JavaScript">
function login_out()
{
	if(!confirm("您确定要退出系统吗？"))
	{		return false;	}
	window.top.location="{:U(GROUP_NAME.'/Index/logout')}";
}
</script>
<body >
<php>
	$condition=array('info_type'=>'后台title');
	$title=M('site_info')->where($condition)->getField('info_content');
</php>
	<div id="top">
		<div >
			<p class="title" align="center" >{$title}</p>
		</div>
		<div class="exit" style="margin-right:100px;">
			<a href="#" onClick="javascript:return login_out();" style="font-size:20px">退出</a>
		</div>
</div>
</body>
