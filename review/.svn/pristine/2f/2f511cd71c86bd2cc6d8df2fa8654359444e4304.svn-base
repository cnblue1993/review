<script language="JavaScript" type="text/JavaScript">

function submitReview(response,question)
{
	if(response!=question)
	{
		alert('您还有未评审的项目，请仔细检查！');
		return false;
	}
	else if(!confirm("真的要提交评审结果吗？")){
		return false;	
	}
	else{
		window.location.href="<?php echo U(GROUP_NAME.'/Response/finish');?>";
		return true;
	}
}

function logout(state)
{
	if(state!='评审完毕')
	{
		alert('您还未提交评审结果！');
		return false;
	}
	else if(!confirm("真的要退出吗？")){
		return false;	
	}
	else{
		window.location.href="<?php echo U(GROUP_NAME.'/Index/logout');?>";
		return true;
	}	
}

function gotohome()
{
	window.location.href="<?php echo U(GROUP_NAME.'/Response/welcome');?>";
}
function reback(page)
{
	window.location.href="<?php echo U(GROUP_NAME.'/Response/show');?>?page_number="+page;
}
</script>

